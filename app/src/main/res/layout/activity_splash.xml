<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="@dimen/splash_logo_w"
        android:layout_height="@dimen/splash_logo_h"
        android:src="@drawable/ic_logo"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/splash_logo_text_w"
        android:layout_height="@dimen/splash_logo_text_h"
        android:layout_marginTop="@dimen/splash_logo_margin"
        android:src="@drawable/vital_sign_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_logo" />

    <ImageView
        android:layout_width="@dimen/splash_tvstorm_logo_w"
        android:layout_height="@dimen/splash_tvstorm_logo_h"
        android:layout_marginBottom="@dimen/splash_tvstorm_margin"
        android:src="@drawable/tvstorm_logo"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/splash_bottom_margin"
        android:fontFamily="sans-serif-thin"
        android:text="@string/splash_text"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="@dimen/splash_tvstorm_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>